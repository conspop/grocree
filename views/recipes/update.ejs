<%- include('../partials/header') %>  

  <body>

    <div class='container-sm'>

      <h1><%= recipe.recipeName %></h1>

      <table class='table table-sm'>
        <% ingredients.forEach(i => { %>
          <tr>
            <form action='/recipes/<%= recipe._id %>/ingredient/<%= i.ingredient._id %>?_method=DELETE' method='POST'>
              <td><%= i.ingredient.ingredientName %></td>
              <td><%= i.amount %></td>
              <td><button type='submit'>Delete</button></td>
            </form>
          </tr>
        <% }) %>
      </table> 
      <form class='pin' action='/recipes/<%= recipe._id %>/ingredient' method='POST'>
        <div class='row'>
          <div class='pin-40 text-center'>
            <input type="text" name="ingredientName" autofocus>
          </div>
          <div class='pin-40 text-center'>
            <input type="text" name="amount">
          </div>
          <div class='pin-20 text-center'>
            <button type="submit">+</button>
          </div>          
        </div>
      </form>

    </div>

    

  </body>


</html>
