<%- include('../partials/header') %>  

  <body>
    
    <div class='container-sm'>
      <h1>Recipes</h1>
      <table class='table table-sm'>
          <tr>
            <th>Recipe</th>
            <th></th>
          </tr>
        <% user.recipes.forEach(r => { %>
          <tr>
            <td><a href='/recipes/<%= r._id %>'><%= r.recipeName %></a></td>
            <td>
              <form action='recipes/<%= r._id %>?_method=DELETE' method='POST'>
                <button type='submit'>Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </table>
      <form action='recipes/' method='POST'>
        <label>Recipe Name
          <input required placeholder='Recipe Name' type='text' name='recipeName'>
        </label>
        <button type='submit'>New Recipe</button>
      </form>
    </div>

  </body>


</html>
