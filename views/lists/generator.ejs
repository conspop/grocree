<%- include('../partials/header') %>  

  <body>
    
      <form action='/lists/generated' method='POST'>
        <div class='container-sm'>
          <div class='form-group'>
            <h5>List Name</h5>
            <input autocomplete='off' required type="text" name="listName">
          </div>
          <div class='form-group'>
            <h5>Include Staples?</h5>
            <div class='form-check'>
              <input class='form-check-input' checked id='yes' type='radio' name='staples' value='Yes'>
              <label class='form-check-label' for="yes">Yes</label>
            </div>
            <div class='form-check'>
              <input class='form-check-input' id='no' type='radio' name='staples' value='No'>
              <label class='form-check-label' for="no">No</label><br>
            </div>
          </div>
          <div class='form-group'>
            <h5>Which recipes would you like to include?</h5>
            <div class='form-check'>
              <% user.recipes.forEach((r,idx) => { %>
                <input class='form-check-input' name='recipes' type='checkbox' value=<%= idx %> %>>
                <label class='form-check-label' for="<%= idx %>"><%= r.recipeName %></label><br>
              <% }) %>
            </div>
          </div>
        </div>  
        <button class='pin-bottom' id='generate' type='submit'>Generate</button>
      </form>
    
  </body>
</html>
