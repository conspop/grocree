<%- include('../partials/header') %>  

    <div class='container-sm'>
      <h1>Lists</h1>
      <table class='table table-sm'>
        <tr>
          <th></th>
          <th>List</th>
        </tr>
      <% user.lists.forEach(l => { %>
        <tr>
          <td class='delete-col'>
            <form action='lists/<%= l._id %>?_method=DELETE' method='POST'>
              <button type='submit'>X</button>
            </form>
          </td>
          <td><a href='/lists/<%= l._id %>'><%= l.listName %></a></td>
        </tr>
      <% }) %>
      </table>
      <a href='/lists/new'>New List</a>
    </div>

    



  </body>


</html>
